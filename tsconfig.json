{
  "compilerOptions": {
    "module": "esnext",
    "target": "es6",
    "lib": [
      "es5",
      "es6",
      "es7",
      "ES2021",
      "esnext",
      "dom",
      "ES2021.String"
    ],
    "sourceMap": true,
    "jsx": "react",
    "rootDir": "build",
    "outDir": "lib",
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "baseUrl": "build/",
    "paths": {
      "icons/*": [
        "icons/*"
      ]
    }
  },
  "exclude": [
    "node_modules",
    "lib",
    "src",
  ]
}